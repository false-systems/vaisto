; Line counter - counts lines in a file
(ns LineCount)

(import Std.File)
(import Std.List)

; Count lines in a file
(defn count-lines [path]
  (match (Std.File/read-lines path)
    [(Ok lines) (Ok (Std.List/length lines))]
    [(Err e) (Err e)]))

; Main: count lines in this source file
(defn main []
  (match (count-lines "examples/LineCount.va")
    [(Ok n) (do (println (str "Lines: " (str n))) n)]
    [(Err e) (do (println "Error reading file") 0)]))
