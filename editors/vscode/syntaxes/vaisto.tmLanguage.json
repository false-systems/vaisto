{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vaisto",
  "scopeName": "source.vaisto",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#atoms" },
    { "include": "#types" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.vaisto",
          "match": ";.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.vaisto",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.vaisto",
          "match": "\\\\."
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vaisto",
          "match": "\\b(if|cond|let|match|match-tuple|receive|do)\\b"
        },
        {
          "name": "keyword.other.vaisto",
          "match": "\\b(def|defn|deftype|defval|fn|process|supervise|extern|ns|import)\\b"
        },
        {
          "name": "constant.language.vaisto",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.vaisto",
          "match": "(\\+|-|\\*|/|==|!=|<=|>=|<|>|!)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vaisto",
          "match": "-?\\d+\\.\\d+"
        },
        {
          "name": "constant.numeric.integer.vaisto",
          "match": "-?\\d+"
        }
      ]
    },
    "atoms": {
      "patterns": [
        {
          "name": "constant.other.keyword.vaisto",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.vaisto",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vaisto",
          "match": "(?<=\\(defn\\s+)[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "name": "entity.name.function.vaisto",
          "match": "(?<=\\(process\\s+)[a-zA-Z_][a-zA-Z0-9_-]*"
        }
      ]
    }
  }
}
